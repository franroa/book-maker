            <column name="BIGINT" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_temporary" />
            </column>

            <column name="book_id" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>

            <column name="entity_type" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>

            <column name="entity_id" type="BIGINT">
                <constraints nullable="false" />
            </column>

            <column name="page" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>

            <column name="style" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>

            <column name="image" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>

            <column name="ncx" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>